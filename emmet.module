<?php
/**
 * @file
 * Module file for the Emmet module, which adds Emmet TextArea Library.
 */

/**
 * Implements hook_libraries_info().
 */
function emmet_libraries_info() {

  $libraries['emmet'] = array(
    'name' => 'Emmet Plugin for textarea fields',
    'vendor url' => 'https://github.com/emmetio/textarea',
    'download url' => 'https://github.com/emmetio/textarea/archive/master.zip',
    'version arguments' => array(
      'file' => 'emmet.js',
      'pattern' => "@VERSION = '([0-9a-zA-Z\.-]+)'@",
      'lines' => 65,
    ),
    'files' => array(
      'js' => array('emmet.min.js'),
    ),
  );
  return $libraries;
}

/**
 * Implements hook_permission().
 */
function emmet_permission() {
  return array(
    'use emmet' => array(
      'title' => t('Use Emmet'),
      'description' => t('Use Emmet Toolkit in textareas.'),
    ),
    'administer emmet module' => array(
      'title' => t('Administer Emmet TextArea Module'),
      'description' => t('Change Emmet TextArea settings.'),
    ),
  );
}

/**
 * Implements hook_form_alter().
 */
function emmet_form_alter(&$form, &$form_state, $form_id) {
  if (user_access('use emmet')) {
    $form['emmet']['#attached']['libraries_load'][] = array('emmet');
    /* $form['emmet']['#attached']['js'] = array(
    drupal_get_path('module', 'emmet') . '/js/emmet.js',
    );*/
  }
  $emmet_profile = variable_get('emmet_profile');
  $settings = array(
    'profile' => $emmet_profile . ' emmet-use_tab-yes emmet-pretty_break-no',
  );
  drupal_add_js(array('emmet' => $settings), 'setting');
  drupal_add_js(drupal_get_path('module', 'emmet') . '/js/emmet.js');
}

/**
 * Implements hook_menu().
 */
function emmet_menu() {
  $items['admin/config/development/emmet'] = array(
    'title' => 'Emmet TextArea Settings',
    'description' => 'Emmet TextArea module configuration.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('emmet_settings_callback'),
    'access arguments' => array('administer emmet module'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}

/**
 * Emmet settings callback.
 */
function emmet_settings_callback() {
  $profile = variable_get('emmet_profile');
  $form['emmet_profile'] = array(
    '#type' => 'radios',
    '#title' => t('Emmet TextArea Output Profile'),
    '#default_value' => $profile,
    '#options' => array(
      'emmet-profile-html' => t('HTML'),
      'emmet-profile-xhtml' => t('XHTML'),
      'emmet-profile-xml' => t('XML'),
      'emmet-profile-line' => t('Line'),
    ),
    '#description' => t(
      'Select the output profile. For example using the shortcut "br": HTML
      would output &lt;br&gt;; XHTML would output &lt;br /&gt;, XML would
      output &lt;br/&gt;. Line uses the HTML output without line breaks.'),
  );
  return system_settings_form($form);
}

/**
 * Implements hook_help().
 */
function emmet_help($path, $arg) {
  switch ($path) {
    case 'admin/help#emmet':
      return '<p>' . t('The Emmet TextArea module allows for the use of the <a href="@url">Emmet Toolkit</a> within text area fields. This toolkit expands shortcuts like ul&gt;li*5 into HTML. This example would expand into an unordered list with five list items when the trigger key is pressed. This module uses the Tab key as the trigger.', array('@url' => url('http://emmet.io/'))) . '</p>';
  }
}
